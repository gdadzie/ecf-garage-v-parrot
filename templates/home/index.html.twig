{% extends 'base.html.twig' %}
{% block title %}Hello HomeController!{% endblock %}


{% block stylesheets %}

    <link href="{{ asset('css/home.css') }}" rel="stylesheet">
{% endblock %}

        {% block javascripts %}
            {{ encore_entry_script_tags('app') }}
        {% endblock %}


{% block body %}
    <div class="container-fluid">
        <div class="row">
            <div class="col-md-12">
                <div class="banner">
                   <img class="banner-img" src="{{ asset('images/banner6.png') }}">
                </div>
            </div>
        </div>
    </div>

    <div class="container section-openingHours border mt-5">
        <div class="row">
            <div class="col-md-6">
                <h1>Horraires d'ouverture</h1>

                <ul>
                    {% for openingHours in openingHoursList %}

                        <li>{{ openingHours.dayOfWeek }}: {{ openingHours.openingTime |date(' H:i') }} - {{ openingHours.closingTime |date('H:i') }}</li>

                    {% endfor %}
                </ul>
            </div>
            <div class="col-md-6">
                <h2>Contact</h2>
            </div>
        </div>
    </div>

    <div class="container section-vehicule">
        <div class="row">

        </div>
    </div>
{% endblock %}
